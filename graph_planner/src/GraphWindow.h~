#ifndef GRAPHWINDOW_H
#define	GRAPHWINDOW_H

#include <iostream>

#include <QApplication>
#include <QComboBox>
#include <QKeyEvent>
#include <QMenuBar>
#include <QFileDialog>
#include <QString>
#include <QScrollBar>
#include <QMainWindow>
#include "ui_graph_window.h"

#include "ros/ros.h"
#include <ros/package.h>
#include <std_msgs/Int32.h>

#include <fstream>
#include <iostream>

/*! Class GraphWindow is a GUI window for 2d graph planing */
class GraphWindow: public QMainWindow, private Ui_GraphWindow {
Q_OBJECT
  public slots:
   //! doSomething function. 
   /*!
       Send message with goal waypoint after pushing "go" button. 
     */
  void doSomething();

public:
    //! A constructor.
    /*!
      Create GUI window. Download list of all waypoints from "../navigation_rail/stamina_vertex.txt".
      Create ROS topic "/goto_cmd".
    */
  GraphWindow(QWidget *parent = 0);
    //! A destructor.
  ~GraphWindow();
private:

    ros::NodeHandle nh_; /*!< ROS NodeHandle. */
    ros::Publisher cmd_pub_; /*!< ROS Publisher for "/goto_cmd" topic. */
};

#endif /* GRAPHWINDOW_H */

