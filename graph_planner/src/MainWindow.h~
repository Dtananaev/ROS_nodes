#include <iostream>

#include <QApplication>
#include <QKeyEvent>
#include <QMenuBar>
#include <QFileDialog>
#include <QString>
#include <QScrollBar>
#include <QMainWindow>
#include "ui_main_window.h"

#include "ros/ros.h"
#include <ros/package.h>
#include <std_msgs/Int32.h>

#include <fstream>
#include <iostream>

#ifndef MYQTAPP_H
#define MYQTAPP_H
/*! Class MainWindow is a GUI window for rail_planning mode */
class MainWindow: public QMainWindow, private Ui_MainWindow
{
Q_OBJECT
  public slots:
   //! doSomething function. 
   /*!
       Send message with goal waypoint after pushing "go" button. 
     */
  void doSomething();

public:
    //! A constructor.
    /*!
      Create GUI window. Download list of all waypoints from "../navigation_rail/stamina_vertex.txt".
      Create ROS topic "/goto_cmd".
    */
  MainWindow(QWidget *parent = 0);
    //! A destructor.
  ~MainWindow();
private:

    ros::NodeHandle nh_; /*!< ROS NodeHandle. */
    ros::Publisher cmd_pub_; /*!< ROS Publisher for "/goto_cmd" topic. */
};

#endif
